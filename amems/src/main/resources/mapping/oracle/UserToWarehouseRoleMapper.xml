     <select id="getParentRegionAll" parameterType="com.eray.thjw.po.UserToWarehouseRole" resultMap="BaseResultMap" >
		SELECT	a.*,b.realname rolename FROM t_user2role a  left join t_user b on a.user_id=b.id where a.role_id=#{roleId}
	</select>
  
   <select id="queryCount" parameterType="com.eray.thjw.po.UserToWarehouseRole" resultType="int">
		select count(*) FROM t_user2role_ck <include refid="roleToBtnParam"></include>
 	 </select>
  
  <!-- 搜索参数 -->
	<sql id="roleToBtnParam">
	   where 1=1
	     <!--id-->
	     <if test="roleId != null and roleId != ''">
             and ROLE_ID = #{roleId}
         </if>
	</sql>
  
  <sql id="Base_Column_List" >
    UR_ID, USER_ID, ROLE_ID
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />

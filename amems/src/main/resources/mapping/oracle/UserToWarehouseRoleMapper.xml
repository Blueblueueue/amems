    where UR_ID = #{urId,jdbcType=VARCHAR}
  </delete>
  <insert id="insert" parameterType="com.eray.thjw.po.UserToWarehouseRole" >
    insert into t_user2role_ck (UR_ID, USER_ID, ROLE_ID
      )
    values ( #{urId,jdbcType=VARCHAR},#{userId,jdbcType=VARCHAR}, #{roleId,jdbcType=VARCHAR}
      )
  </insert>
  <insert id="insertSelective" parameterType="com.eray.thjw.po.UserToWarehouseRole" >
    insert into t_user2role_ck
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="urId != null" >
        UR_ID,
      </if>
      <if test="userId != null" >
        USER_ID,
      </if>
      <if test="roleId != null" >

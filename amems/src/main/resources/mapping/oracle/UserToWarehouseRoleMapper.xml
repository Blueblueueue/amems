      <if test="userId != null" >
        USER_ID = #{userId,jdbcType=VARCHAR},
      </if>
      <if test="roleId != null" >
        ROLE_ID = #{roleId,jdbcType=VARCHAR},
      </if>
    </set>
    where UR_ID = #{urId,jdbcType=VARCHAR}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.eray.thjw.po.UserToWarehouseRole" >
    update t_user2role_ck
    set USER_ID = #{userId,jdbcType=VARCHAR},
      ROLE_ID = #{roleId,jdbcType=VARCHAR}
    where UR_ID = #{urId,jdbcType=VARCHAR}
  </update>
  
  <!-- 根据id获取角色信息 -->
  <select id="queryRole" resultMap="BaseResultMap" parameterType="com.eray.thjw.po.UserToWarehouseRole">
 	 SELECT R.ID,R.ROLE_CODE,R.ROLE_NAME,R.ROLE_REMARK,R.DPRT_ID FROM (select ID, USERNAME, REALNAME, CELLPHONE, PHONE, SEX, STATE, 
    BMDM,JGDM FROM t_user WHERE ID = #{userId,jdbcType=VARCHAR}) U , t_user2role UR,t_role R
		WHERE U.ID = UR.USER_ID AND UR.ROLE_ID = R.ID 
  </select>
  
  <!-- 查询除用户选择的角色以外的所有角色信息 -->
  <select id="queryUserNotRole" resultMap="BaseResultMap" parameterType="com.eray.thjw.po.UserToWarehouseRole">
	SELECT ID,ROLE_CODE,ROLE_NAME,ROLE_REMARK,DPRT_ID FROM t_role WHERE ID not IN (
		SELECT R.id FROM (select ID, USERNAME, REALNAME, CELLPHONE, PHONE, SEX, STATE, 
    BMDM,JGDM FROM t_user WHERE ID = #{userId,jdbcType=VARCHAR}) U , t_user2role UR,t_role R
		WHERE U.ID = UR.USER_ID AND UR.ROLE_ID = R.ID
	)

  </select>
  <!-- 搜索参数 -->
	<sql id="userToRoleParam">
	   where 1=1
	     <!--id-->
	     <if test="userId != null and userId != ''">
             and USER_ID = #{userId}
         </if>
         <if test="roleId != null and roleId != ''">
             and ROLE_ID = #{roleId}
         </if>
	</sql>
	<!-- 删除关系信息 -->
	<delete id="delete" parameterType="com.eray.thjw.po.UserToWarehouseRole" >
		delete from t_user2role_ck
		<include refid="userToRoleParam"></include>
	</delete>
  

  
  
